{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["vite/client", "node"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] 
    },
  },
  "include": ["src", "test"]
}
