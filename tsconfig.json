{
  "compilerOptions": {
    "declaration": true,     
    "declarationMap": true, 
    "emitDeclarationOnly": false,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "outDir": "./dist", 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
"include": ["src/**/*", "index.ts", "test/**/*"],
  "exclude": ["node_modules", "dist"] 
}
